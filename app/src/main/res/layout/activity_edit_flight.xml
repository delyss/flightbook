<?xml version="1.0" encoding="utf-8"?><!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"--><!--android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"--><!--android:paddingRight="@dimen/activity_horizontal_margin"--><!--android:paddingTop="@dimen/activity_vertical_margin"--><!--android:paddingBottom="@dimen/activity_vertical_margin"--><!--tools:context="com.example.murat.akuhavkflightbook.tabs.flight.EditFlight">-->

<!--</RelativeLayout>-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spnHarness"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spnWing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spnTakeOff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spnInstructorTakeOff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spnInstructorLanding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnEditFlightDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="showDatePickerDialog"
                android:text="pickDate"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="showDatePickerDialog"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lblEditTakeoff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Takeoff"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/txtEditTakeoffName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="takeoff name"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/txtEditTakeoffAltitude"
                    android:layout_width="56dp"
                    android:layout_height="fill_parent"
                    android:ems="10"
                    android:hint="9999"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/lblEditAltitudeMeter"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:text="meter"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/abc_primary_text_material_light" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblEditTakeoffCharacteristic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Characteristic"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/chbEditTakeoffEducation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Education" />

            <CheckBox
                android:id="@+id/chbEditTakeoffThermic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Thermic" />

            <CheckBox
                android:id="@+id/chbEditTakeoffSoaring"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Soaring" />

            <CheckBox
                android:id="@+id/chbEditTakeoffAboveSea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Above sea" />

            <TextView
                android:id="@+id/lblEditTakeoffLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Location"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/txtEditTakeoffLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblEditTakeoffDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/txtEditTakeoffDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>